{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "1.0",
    "description": "Submit text to be summarized by a backend service.",
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["WILL-BE-REPLACED-BY-SETUP-CHROMEEXTENSION-SCRIPT"],
    "action": {
        
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },  "content_scripts": [
        {
          "matches": ["https://www.youtube.com/*"],
          "js": ["content.js"]
        }],
    
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    } , "background": {
        "service_worker": "background.js", 
        "type": "module"
    }
}
